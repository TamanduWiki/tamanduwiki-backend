// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String        @id @default(uuid())
  email          String        @unique
  firstName      String
  lastName       String
  password       String
  universityTie  UniversityTie @default(student)
  status         UserStatus    @default(pending_auth)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

model Page {
  id           String              @id @default(uuid())
  title        String
  content      String
  slug         String              @unique
  categories   CategoriesOnPages[]
}

model Category {
  id      String @id @default(uuid())
  title   String
  pages   CategoriesOnPages[]
}

model CategoriesOnPages {
  page       Page     @relation(fields: [pageId], references: [id])
  pageId     String // relation scalar field (used in the `@relation` attribute above)
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String // relation scalar field (used in the `@relation` attribute above)
  assignedAt DateTime @default(now())

  @@id([pageId, categoryId])
}

enum UniversityTie {
  student
  teacher
  employee
}

enum UserStatus {
  active
  pending_auth
  suspended
  banned
}
